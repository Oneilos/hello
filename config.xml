<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>HelloWorld</name>

    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>

    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>

    <preference name="phonegap-version" value="cli-8.0.0" />
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-android-permissions" spec="1" />
    <plugin name="cordova-plugin-geolocation" spec="~4">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="This app uses your location for maps." />
    </plugin>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="28" />
        <allow-intent href="market:*" />
        <uses-permission name="android.permission.ACCESS_COARSE_LOCATION" />
        <uses-permission name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-permission name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
        <icon density="ldpi" src="merges/icon/android/ldpi.png" />
        <icon density="mdpi" src="merges/icon/android/mdpi.png" />
        <icon density="hdpi" src="merges/icon/android/hdpi.png" />
        <icon density="xhdpi" src="merges/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="merges/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="merges/icon/android/xxxhdpi.png" />
        <splash density="land-ldpi" src="merges/screen/android/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="merges/screen/android/splash-land-mdpi.png" />
        <splash density="land-hdpi" src="merges/screen/android/splash-land-hdpi.png" />
        <splash density="land-xhdpi" src="merges/screen/android/splash-land-xhdpi.png" />
        <splash density="port-ldpi" src="merges/screen/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="merges/screen/android/splash-port-mdpi.png" />
        <splash density="port-hdpi" src="merges/screen/android/splash-port-hdpi.png" />
        <splash density="port-xhdpi" src="merges/screen/android/splash-port-xhdpi.png" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
