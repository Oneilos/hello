<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>HelloWorld</name>

    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>

    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>

    <preference name="phonegap-version" value="cli-8.0.0" />
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-android-permissions" spec="1" />
    <plugin name="cordova-plugin-geolocation" spec="~4">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="This app uses your location for maps." />
    </plugin>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="28" />
        <allow-intent href="market:*" />
        <uses-permission name="android.permission.ACCESS_COARSE_LOCATION" />
        <uses-permission name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-permission name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
        <icon density="ldpi" src="merges/icon/android/ldpi.png" />
        <icon density="mdpi" src="merges/icon/android/mdpi.png" />
        <icon density="hdpi" src="merges/icon/android/hdpi.png" />
        <icon density="xhdpi" src="merges/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="merges/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="merges/icon/android/xxxhdpi.png" />
        <splash density="land-ldpi" src="merges/screen/android/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="merges/screen/android/splash-land-mdpi.png" />
        <splash density="land-hdpi" src="merges/screen/android/splash-land-hdpi.png" />
        <splash density="land-xhdpi" src="merges/screen/android/splash-land-xhdpi.png" />
        <splash density="port-ldpi" src="merges/screen/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="merges/screen/android/splash-port-mdpi.png" />
        <splash density="port-hdpi" src="merges/screen/android/splash-port-hdpi.png" />
        <splash density="port-xhdpi" src="merges/screen/android/splash-port-xhdpi.png" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" platform="ios" src="merges/icon/ios/icon.png" width="57" />
        <icon height="114" platform="ios" src="merges/icon/ios/icon@2x.png" width="114" />
        <icon height="40" platform="ios" src="merges/icon/ios/icon-40.png" width="40" />
        <icon height="80" platform="ios" src="merges/icon/ios/icon-40@2x.png" width="80" />
        <icon height="50" platform="ios" src="merges/icon/ios/icon-50.png" width="50" />
        <icon height="100" platform="ios" src="merges/icon/ios/icon-50@2x.png" width="100" />
        <icon height="60" platform="ios" src="merges/icon/ios/icon-60.png" width="60" />
        <icon height="120" platform="ios" src="merges/icon/ios/icon-60@2x.png" width="120" />
        <icon height="180" platform="ios" src="merges/icon/ios/icon-60@3x.png" width="180" />
        <icon height="72" platform="ios" src="merges/icon/ios/icon-72.png" width="72" />
        <icon height="144" platform="ios" src="merges/icon/ios/icon-72@2x.png" width="144" />
        <icon height="76" platform="ios" src="merges/icon/ios/icon-76.png" width="76" />
        <icon height="152" platform="ios" src="merges/icon/ios/icon-76@2x.png" width="152" />
        <icon height="29" platform="ios" src="merges/icon/ios/icon-small.png" width="29" />
        <icon height="58" platform="ios" src="merges/icon/ios/icon-small@2x.png" width="58" />

        <splash height="1136" platform="ios" src="merges/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" platform="ios" src="merges/screen/ios/Default-667h.png" width="750" />
        <splash height="2208" platform="ios" src="merges/screen/ios/Default-736h.png" width="1242" />
        <splash height="1242" platform="ios" src="merges/screen/ios/Default-Landscape-736h.png" width="2208" />
        <splash height="1536" platform="ios" src="merges/screen/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="768" platform="ios" src="merges/screen/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="2048" platform="ios" src="merges/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="1024" platform="ios" src="merges/screen/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="480" platform="ios" src="merges/screen/ios/Default~iphone.png" width="320" />
    </platform>

</widget>
